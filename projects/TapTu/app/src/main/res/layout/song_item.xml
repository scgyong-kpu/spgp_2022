<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_item_bg"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/album_thumb_size"
        android:layout_height="@dimen/album_thumb_size"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/album_thumb_size"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="@dimen/song_title_text_size"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="@color/song_title_text_color"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/artist"
            android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/song_artist_text_size"
            android:textColor="@color/song_artist_text_color"
            />
    </LinearLayout>

</LinearLayout>